
<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><% @post.created_at.strftime('%A, %B, %d')%></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>
  <div id="content">
    <p><%= markdown @post.content%></p>
  </div>

  <hr>

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit Article", edit_post_path(@post) %>
      <%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Confirm Deletion of Post"} %>
    </div>
  <% end %>

  <hr>

</div>
